@page
@model RazorHotel24.Pages.Hotels.GetAllHotelsModel
@{
    ViewData["Title"] = "Hotels";
}

<h2 style="color: darkslateblue" class="display-4"> List of hotels</h2>

<a h4 asp-page="/Hotels/Create">Create new hotel</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Hotel No
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Hotels.Count() != 0)
        {
            @foreach (var item in Model.Hotels)
            {
                <tr>
                    <td>
                        @item.HotelNr
                    </td>
                    <td>
                        @item.Navn
                    </td>
                    <td>
                        @item.Adresse
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Hotels/Delete" asp-route-hotelnr="@item.HotelNr">Delete</a>|
                            <a asp-page="/Hotels/Edit" asp-route-hotelnr="@item.HotelNr">Edit</a>|
                            <a asp-page="/Rooms/Create" asp-route-id="@item.HotelNr" asp-route-hname="@item.Navn">Create new room</a>|
                            <a asp-page="/Rooms/GetAllRooms" asp-page-handler="MyRooms" asp-route-cid="@item.HotelNr" asp-route-hname="@item.Navn">Rooms in hotel</a>
                        </p>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
